{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "type": "cppvsdbg",
        "request": "launch",
        "name": "Tauri Development Debug (MSVC)",
        "program": "${workspaceRoot}/cirrus-app/src-tauri/target/debug/app.exe",
        "externalConsole": false,
        "preLaunchTask": "ui:dev",
        "cwd": "${workspaceRoot}"
      },
      {
        "type": "lldb",
        "request": "launch",
        "name": "Tauri Development Debug",
        "cargo": {
          "args": [
            "build",
            "--manifest-path=./cirrus-app/src-tauri/Cargo.toml",
            "--no-default-features"
          ]
        },
        "env": {
          "RUST_BACKTRACE": "1"
        },
        // task for the `beforeDevCommand` if used, must be configured in `.vscode/tasks.json`
        "preLaunchTask": "ui:dev"
      },
      {
        "type": "lldb",
        "request": "launch",
        "name": "Tauri Production Debug",
        "cargo": {
          "args": ["build", "--release", "--manifest-path=./cirrus-app/src-tauri/Cargo.toml"]
        },
        // task for the `beforeBuildCommand` if used, must be configured in `.vscode/tasks.json`
        "preLaunchTask": "ui:build"
      },
      {
        "type": "lldb",
        "request": "launch",
        "name": "Server Development Debug (lldb)",
        "cargo": {
          "args": [
            "build",
            "--manifest-path=./cirrus-server/Cargo.toml",
          ]
        },
        // "program": "${workspaceRoot}/cirrus-server/target/debug/cirrus-server",
        "env": {
          "RUST_BACKTRACE": "1"
        },
        "cwd": "${workspaceRoot}/cirrus-server"
      },
      {
        "type": "cppvsdbg",
        "request": "launch",
        "name": "Server Development Debug (MSVC)",
        "program": "${workspaceRoot}/cirrus-server/target/debug/cirrus-server.exe",
        "externalConsole": false,
        "cwd": "${workspaceRoot}"
      },
    ]
  }